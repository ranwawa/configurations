{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext", // 编译后的模块方案是import export
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true, // 兼容import=语法
    "declaration": true, // 生成.d.ts文件
    "declarationDir": "./types", // .d.ts目录
    "declarationMap": true, // 点击跳转到源码,而不是.d.ts
    "sourceMap": true
  }
}
